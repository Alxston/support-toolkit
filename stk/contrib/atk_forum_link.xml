<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.phpbb.com/mods/xml/modx-1.2.2.xsd">
<header>
	<license>http://opensource.org/licenses/gpl-license.php GNU General Public License v2</license>
	<title lang="en">Support Tool Kit forum link</title>
	<description lang="en">Adds a link in the footer (under the ACP link) that points to the Support Tool Kit</description>

	<author-notes lang="en"></author-notes>

	<author-group>
		<author>
			<username>EXreaction</username>
			<realname>Nathan Guse</realname>
			<homepage>http://www.lithiumstudios.org/</homepage>
			<email>exreaction@lithiumstudios.org</email>
		</author>
		<author>
			<username>Erik Frèrerejean</username>
			<realname>Erik Frèrerejean</realname>
			<homepage></homepage>
			<email></email>
		</author>
	</author-group>

	<mod-version>1.0.0-dev</mod-version>

	<installation>
		<level>easy</level>
		<time>60</time>
		<target-version>3.0.4</target-version>
	</installation>
</header>

<action-group>
	<open src="includes/functions.php">
		<edit>
			<find><![CDATA['U_ACP' => ($auth->acl_get('a_') && $user->data['is_registered']]]></find>
			<action type="before-add"><![CDATA[		//-- Support Tool Kit
		//-- Add:
		'U_STK' => ($auth->acl_get('a_') && $user->data['is_registered']) ? append_sid("{$phpbb_root_path}stk/index.$phpEx", false, true, $user->session_id) : '',
		//-- End Support Tool Kit]]></action>
		</edit>
	</open>

	<open src="language/en/common.php">
		<edit>
			<find><![CDATA['ASCENDING']]></find>
			<action type="after-add"><![CDATA[	//-- Support Tool Kit
	//-- Add:
	'STK'							=> 'Support Tool Kit',
	//-- End Support Tool Kit]]></action>
		</edit>
	</open>

	<open src="styles/prosilver/template/overall_footer.html">
		<edit>
			<find><![CDATA[<!-- IF U_ACP --><br /><strong>]]></find>
			<inline-edit>
				<inline-find><![CDATA[</strong>]]></inline-find>
				<inline-action type="after-add"><![CDATA[<br /><strong><a href="{U_STK}" title="{L_STK}">{L_STK}</a></strong>]]></inline-action>
			</inline-edit>
		</edit>
	</open>
</action-group>
</mod>